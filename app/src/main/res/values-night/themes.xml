<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SWFileManage" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="ic_left">@drawable/ic_left_night</item>
        <item name="ic_refresh">@drawable/ic_refresh_night</item>
        <item name="ic_add">@drawable/ic_add_night</item>
        <item name="ic_up">@drawable/ic_up_night</item>
        <item name="ic_right">@drawable/ic_right_night</item>
        <item name="ic_link">@drawable/ic_link_night</item>
        <item name="ic_reverse">@drawable/ic_reverse_night</item>
        <item name="ic_text_save">@drawable/ic_text_save_night</item>
    </style>

    <!-- 15sp大小字体颜色. -->
    <style name="AppTextColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- 默认字体颜色. -->
    <style name="AppTitleColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- operations_item字体颜色. -->
    <style name="AppItemColor">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- 下方菜单颜色. -->
    <style name="AppMenuColor">
        <item name="android:background">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Spinner" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>